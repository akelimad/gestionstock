{% extends 'base.html.twig' %}
{% block title %}Import{% endblock %} 
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        
                        <h4 class="title">Importer des donn√©es depuis fichier csv</h4>
                        <div class="toolbar">
                            <form action="{{path('product_import')}}" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-6">
                                        {{form_widget(form.fileExcel, {'attr': {'accept': '.csv'}}) }}
                                    </div>
                                    <div class="col-md-6">
                                        <input type="submit" value="importer" class="btn btn-sm btn-info">
                                    </div>
                                </div>
                            </form>
                            <hr>

                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="title">Exporter les produits sous format excel</h4>
                                </div>
                                <div class="col-md-6">
                                    <a href="{{path('product_export')}}" class="btn btn-sm btn-info">Export Data</a>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>

{% endblock %}