{% extends 'base.html.twig' %}
{% block title %}{{'category.page.title'|trans}}{% endblock %} 
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <span id="locale" data-locale="{{ app.request.locale }}"></span>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{path('app_default_index')}}">{{'breadcrumb.home'|trans}}</a></li>
                    <li class="breadcrumb-item"><a href="{{path('category_index')}}">{{'category.breadcrumb.categories'|trans}}</a></li>
                </ol>
                <div class="card">
                    <div class="content categories">
                        
                        <h4 class="title"><i class="fa fa-list"></i> {{'category.index.title'|trans}}
                        {% if is_granted('ROLE_USER') %}
                            <a href=" {{path('category_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> {{'btn.new'|trans}}</a> 
                        {% endif %}
                        </h4>
                        <div class="toolbar">
                           
                        </div>
                        <div class="material-datatables">
                            
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>{{'category.label.name'|trans}}</th>
                                        <th>Code</th>
                                        <th>Description</th>
                                        <th>{{'label.status'|trans}}</th>
                                        <th class="disabled-sorting text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for c in categories %}
                                    <tr>
                                        <td>{{c.id}}</td>
                                        <td>{{c.name}}</td>
                                        <td>{{c.code}}</td>
                                        <td>{{c.description ? c.description : '---'}}</td>
                                        <td>{{c.active == 1 ? 'Active' : 'Inactive'}}</td>
                                        <td class="text-right">
                                            <a href="{{ path('category_edit', { 'id': c.id }) }}" title="Modifier" class="btn btn-simple btn-warning btn-icon btn-fill edit"><i class="ti-pencil-alt"></i></a>

                                            <button data-id="{{ c.id }}" title="{{ c.active == 0 ? 'Supprimer' : 'Vueillez dÃ©sactiver pour pouvoir supprimer' }}" class="btn btn-simple btn-danger btn-icon btn-fill remove-category {{c.active == 1 ? 'prevent-remove' : ''}}" {{c.active == 1 ? 'disabled' : ''}}><i class="ti-close"></i></button>
                                            <span id="csrf_token" data-token="{{ csrf_token('form') }}"></span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>{{'category.label.name'|trans}}</th>
                                        <th>Code</th>
                                        <th>Description</th>
                                        <th>{{'label.status'|trans}}</th>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>

{% endblock %}