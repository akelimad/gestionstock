{% extends 'base.html.twig' %}
{% block title %}Import{% endblock %} 
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        
                        <h4 class="title">{{'import.h4.label'|trans}}</h4>
                        <div class="toolbar">
                            <form action="{{path('product_import')}}" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="form_fileExcel"><span class="btn btn-primary">{{'import.input.label'|trans}}</span></label>
                                        <span class="fileName" id="fileName">{{'import.fileChoosen.label'|trans}}</span>
                                        {{form_widget(form.fileExcel, {'attr': {'accept': '.csv'}}) }}
                                    </div>
                                    <div class="col-md-6">
                                        <input type="submit" value="{{'import.btn.label'|trans}}" class="btn btn-sm btn-info">
                                    </div>
                                </div>
                            </form>
                            <hr>

                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="title">{{'export.h4.label'|trans}}</h4>
                                </div>
                                <div class="col-md-6">
                                    <a href="{{path('product_export')}}" class="btn btn-sm btn-info">{{'export.btn.label'|trans}}</a>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>

{% endblock %}