                                            <div class="col-md-4">
                                                {{ form_label(form.internetPrice, "Prix internet", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.internetPrice, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.internetPrice) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.images) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.images, "Images", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                <span class="help-block">{{ form_errors(form.images) }}</span> 
                                                {{ form_widget(form.images, {'attr': {'class': 'form-control'}}) }}                        
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group ">
                                        <div class="row form-group">
                                            <div class="col-md-4">
                                                <label>Categorie</label>
                                            </div>
                                            <div class="col-md-8">
                                                <select name="categories" id="categories" class="form-control">
                                                    <option value="0">Choisissez la categorie</option>
                                                    {% for cat in categories %}
                                                        <option value="{{cat.id}}"> {{cat.name}} </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <label>Sous categorie</label>
                                            </div>
                                            <div class="col-md-8">
                                                <select name="s_categories" id="s_categories" class="form-control">
                                                    <option value="0">Choisissez sous categorie</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.packages) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.packages, "Emballage", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.packages, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.packages) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group {{ form_errors(form.providers) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.providers, "Fournisseur", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.providers, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.providers) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.active) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.active, "Active", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                <label class="checkbox">
                                                    <span class="icons">
                                                    <span class="first-icon fa fa-square"></span>
                                                    <span class="second-icon fa fa-check-square "></span>
                                                    {{ form_widget(form.active, {'attr': {'class': ''}}) }}
                                                </label>
                                                <span class="help-block">{{ form_errors(form.active) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <button type="submit" id="submit-data" class="btn btn-info btn-fill"><i class="fa fa-plus"></i> Add product</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
