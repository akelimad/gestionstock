{% extends 'base.html.twig' %}
{% block title %}Categorie{% endblock %}
{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="card">
                        {{ form_start(edit_form) }}
                            <div class="content">
                                <h4 class="title text-center">Ajouter une couleur </h4>
                                
                                <div class="form-group {{ form_errors(edit_form.name) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.name, "Nom", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.name) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="">Code</label>
                                        </div>
                                        <div class="col-md-8">
                                            <input type="color" name="color" class="form-control" style="color: {{color.code}}">
                                            <span class="help-block"></span> 
                                        </div>
                                    </div>
                                </div>
                                <div class=" form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>Categorie</label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="row">
                                                <div class="col-md-10">
                                                    <select name="categories" id="categories" class="form-control">
                                                        <option value="0">Choisissez la categorie</option>
                                                        {% for cat in categories %}
                                                            <option value="{{cat.id}}"> {{cat.name}} </option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                                <div class="col-md-2" id="loading-child-cat">
                                                    <img src="{{ asset('assets/img/loading.gif') }}" class="img-responsive" alt="">
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>Sous categorie</label>
                                        </div>
                                        <div class="col-md-8">
                                            <select name="s_categories" id="s_categories" class="form-control">
                                                <option value="0">Choisissez sous categorie</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <button type="submit" class="btn btn-info btn-fill"><i class="fa fa-plus"></i> Mettre Ã  jour</button>
                            </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
