{% extends 'base.html.twig' %} 
{% block title %}Produit{% endblock %}
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        <h4 class="title">La liste des produits 
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href=" {{path('product_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Nouveau</a>
                        {% endif %}
                        </h4>
                        <div class="toolbar">
                            <div class="col-md-12">
                                {{ form_start(form,  {'action': path('product_import')}) }}
                                <div class="form-group {{ form_errors(form.fileExcel) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(form.fileExcel, "Veuillez choisir un fichier excel format(csv)", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-4">
                                            {{ form_widget(form.fileExcel, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(form.fileExcel) }}</span> 
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-info btn-fill"><i class="fa fa-plus"></i> upload file </button>
                                        </div>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                        
                        <div class="material-datatables product-table">
                            <div class="row">
                                <div class="col-md-6 filter">
                                    <select name="filter-by-cat" id="filter-by-cat" class="form-control">
                                        <option value="0">Filtrez par catégorie</option>
                                        {% for cat in categories %}
                                        <option value="{{cat.id}}">{{ cat.name }}</option>
                                        {% endfor %} 
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <select name="filter-by-prov" id="filter-by-prov" class="form-control">
                                        <option value="0">Filtrez par fournisseur</option>
                                        {% for prov in providers %}
                                        <option value="{{prov.id}}">{{ prov.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                                <thead>
                                    <tr>
                                        <th>ID Produit</th>
                                        <th>Photo</th>
                                        <th>Name</th>
                                        <th>Prix internet (&euro;)</th>
                                        <th>Categorie</th>
                                        <th>Sous categorie</th>
                                        <th>Statut</th>
                                        <th class="disabled-sorting text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id ="product-results"> 
                                    {% for p in products %}
                                    <tr>
                                        <td>{{p.codeBar}}</td>
                                        <td>
                                        {% for image in p.images|slice(0, 1) %}
                                        <img src="{{ asset('uploads/images/' ~ image.path) }}" alt="" width="50">
                                        {% endfor %}
                                        </td>
                                        <td>{{p.name}}</td>
                                        <td>{{p.internetPrice ? p.internetPrice : ""}} </td>
                                        <td>
                                        {% for cat in p.categories %}
                                            {{ cat.parent == null ? cat.name : '' }}
                                        {% endfor %}
                                        </td>  
                                        <td>
                                        {% for cat in p.categories %}
                                            {{ cat.parent != null ? cat.name : '' }}
                                        {% endfor %}
                                        </td>
                                        <td>{{p.active == 1 ? 'Active' : 'Desactivé' }}</td>
                                        <td class="text-right">
                                            <a href="{{ path('product_show', { 'id': p.id }) }}" class="btn btn-simple btn-default btn-icon btn-fill edit showProduct"><i class="ti-eye"></i></a>

                                            <a href="{{ path('product_edit', { 'id': p.id }) }}" class="btn btn-simple btn-warning btn-icon btn-fill edit"><i class="ti-pencil-alt"></i></a>

                                            <button data-id="{{ p.id }}"  class="btn btn-simple btn-danger btn-icon btn-fill remove-product"><i class="ti-close"></i></button>
                                            <span id="csrf_token" data-token="{{ csrf_token('form') }}"></span>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                
                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>
<script src="{{ asset('assets/js/product.js') }}"></script>
<script>


    var products = [];
    var detailProduct = {};

    {% for p in products %}
        var imgProd=[];
        var catProd=[];
        var provProd=[];
        var packProd=[];

        {% for image in p.images %}  imgProd .push('{{image.path}}'); {% endfor %}
        {% for cat in p.categories %}  catProd .push('{{cat.name}}');   {% endfor %}
        {% for prov in p.providers %} provProd.push('{{prov.name}}'); {% endfor %}
        {% for pack in p.packages %}  packProd.push('{{pack.name}}'); {% endfor %}
        detailProduct = {
            codeBar            : {{p.codeBar}},
            name          :'{{p.name}}',
            description   :'{{p.description ? p.description : "null"}}',
            sizeInch      :'{{p.sizeInch ? p.sizeInch : "null"}}',
            sizeCm        :'{{p.sizeCm ? p.sizeCm : "null"}}',
            color         :'{{p.color ? p.color : "null"}}',
            composition   :'{{p.composition ? p.composition : "null"}}',
            form          :'{{p.form ? p.form : "null"}}',
            weight        : {{p.weight ? p.weight : "null"}},
            unitPrice     : {{p.unitPrice ? p.unitPrice : "null"}},
            wholesalePrice: {{p.wholesalePrice ? p.wholesalePrice : "null"}},
            specialPrice  : {{p.specialPrice ? p.specialPrice : "null"}},
            internetPrice : {{p.internetPrice ? p.internetPrice : "null"}},
            images        : imgProd,
            category      : catProd,
            provider      : provProd,
            package       : packProd,
        }
        products.push(detailProduct);
    {% endfor %}
    Product.init(products);

</script>
{% endblock %}