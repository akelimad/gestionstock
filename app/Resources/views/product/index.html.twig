{% extends 'base.html.twig' %}

{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        <h4 class="title">La liste des produits <a href=" {{path('product_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Nouveau</a></h4>
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Prix unitaire</th>
                                        <th>Color</th>
                                        <td>Category</td>
                                        <td>Parent category</td>
                                        <td>Status</td>
                                        <th class="disabled-sorting text-right">Actions</th>
                                    </tr>
                                </thead>
                                {% for p in products %}
                                <tbody>
                                    <tr>
                                        <td>{{p.id}}</td>
                                        <td>{{p.name}}</td>
                                        <td>{{p.description}}</td>
                                        <td>{{p.unitPrice}}</td>
                                        <td>{{p.color}}</td>
                                        <td>
                                        {% for cat in p.category %}
                                            {{cat.name}}
                                        </td>
                                        <td>
                                            {{cat.parent is null ? 'No parent' : cat.parent}}
                                        {% endfor %}
                                        </td>
                                        <td>{{p.active == 1 ? 'Active' : 'Not active'}}</td>
                                        <td class="text-right">
                                                <a href="{{ path('product_edit', { 'id': p.id }) }}" class="btn btn-simple btn-warning btn-icon edit"><i class="ti-pencil-alt"></i></a>
                                                <a href="{{ path('product_delete', { 'id': p.id }) }}" class="btn btn-simple btn-danger btn-icon remove">
                                                    <i class="ti-close"></i>
                                                </a>
                                            </form>
                                        </td>
                                    </tr>
                                </tbody>
                                {% endfor %}
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Prix unitaire</th>
                                        <th>Color</th>
                                        <td>Category</td>
                                        <td>Sub category</td>
                                        <td>Status</td>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>

{% endblock %}