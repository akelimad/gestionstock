{% extends 'base.html.twig' %}
{% block title %}Poduit{% endblock %}
{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="card">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="name"></div>
                                <div class="category"></div>
                                <div class="imagesProduct" 
                                     data-image-url="{{ asset('uploads/images/') }}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="description">   
                                    </div>
                                    <hr>
                                </div>
                                <div class="row">
                                    <div class="col-md-5 list-items">
                                        <p>Caracteristiques :</p>
                                        <ul>
                                            <li class="size-inch"></li>
                                            <li class="size-cm"></li>
                                            <li class="weight"></li>
                                            <li class="color"></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-7 list-items">
                                        <p>Prix du produit :</p>
                                        <ul>
                                            <li class="unit-price"></li>
                                            <li class="wholesale-price"></li>
                                            <li class="special-price"></li>
                                            <li class="special-price"></li>
                                            <li class="internet-price"></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
