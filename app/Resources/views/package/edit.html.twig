{% extends 'base.html.twig' %}
{% block title %}{{'package.page.title'|trans}}{% endblock %}
{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{path('app_default_locale')}}">{{'breadcrumb.home'|trans}}</a></li>
                        <li class="breadcrumb-item"><a href="{{path('package_index')}}">{{'package.breadcrumb.packages'|trans}}</a></li>
                        <li class="breadcrumb-item active">{{package.name}}</li>
                    </ol>
                    <div class="card">
                        {{ form_start(edit_form) }}
                            <div class="content">
                                <h4 class="title text-center">{{'package.action.edit.title'|trans}}</h4>
                                <div class="form-group {{ form_errors(edit_form.name) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.name, 'package.label.name', {'label_attr': {'class': 'control-label'}})|trans | raw  }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.name) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.size) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.size, 'package.label.size', {'label_attr': {'class': 'control-label'}})|trans | raw }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.size, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.size) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.cbm) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.cbm, 'package.label.cbm', {'label_attr': {'class': 'control-label'}})|trans | raw }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.cbm, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.cbm) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.marineCost) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.marineCost, 'package.label.marineCost', {'label_attr': {'class': 'control-label'}})|trans | raw }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.marineCost, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.marineCost) }} </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.airCost) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.airCost, 'package.label.airCost', {'label_attr': {'class': 'control-label'}})|trans | raw }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.airCost, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.airCost) }} </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.active) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.active, 'label.status', {'label_attr': {'class': 'control-label'}})|trans | raw }}
                                        </div>
                                        <div class="col-md-8">
                                            <div class="checkbox-field">
                                                {{ form_widget(edit_form.active, {'attr': {'class': ''}}) }}
                                            </div>
                                            <span class="help-block">{{ form_errors(edit_form.active) }} </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <button type="submit" class="btn btn-info btn-fill"><i class="fa fa-edit"></i> {{'btn.edit'|trans}} </button>
                            </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
