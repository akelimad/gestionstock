{% extends 'base.html.twig' %}
{% block title %}Categorie{% endblock %} 
{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="card">
                        {{ form_start(edit_form) }}
                            <div class="content">
                                <h4 class="title text-center">Modifier la categorie</h4>
                                <div class="form-group {{ form_errors(edit_form.name) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.name, "Nom", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.name) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.description) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.description, "Description", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.description) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.parent) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.parent, "Categorie parente", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.parent, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.parent) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.active) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.active, "Active", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            <label class="checkbox">
                                                <span class="icons">
                                                <span class="first-icon fa fa-square"></span>
                                                <span class="second-icon fa fa-check-square "></span>
                                                {{ form_widget(edit_form.active, {'attr': {'class': ''}}) }}
                                            </label>
                                            <span class="help-block">{{ form_errors(edit_form.active) }}</span> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <button type="submit" class="btn btn-info btn-fill"><i class="fa fa-edit"></i> Mettre Ã  jour</button>
                            </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
