{% extends 'base.html.twig' %} 
{% block title %}Produit{% endblock %}
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        <h4 class="title">La liste des produits <a href=" {{path('product_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Nouveau</a></h4>
                        <div class="toolbar">
                            
                        </div>
                        
                        <div class="material-datatables product-table">
                            <div class="row">
                                <div class="col-md-6 filter">
                                    <select name="filter-by-cat" id="filter-by-cat" class="form-control">
                                        <option value="0">Filtrez par cat√©gorie</option>
                                        {% for cat in categories %}
                                        <option value="{{cat.id}}">{{ cat.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <select name="filter-by-prov" id="filter-by-prov" class="form-control">
                                        <option value="0">Filtrez par fournisseur</option>
                                        {% for prov in providers %}
                                        <option value="{{prov.id}}">{{ prov.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            {% include "product/results.html.twig" %}
                        </div>
                        {% include "product/details.html.twig" %}
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>
<script src="{{ asset('assets/js/product.js') }}"></script>
<script>


    var products = [];
    var detailProduct = {};

    {% for p in products %}
        var imgProd=[];
        var catProd=[];
        var provProd=[];
        var packProd=[];

        {% for image in p.images %}  imgProd .push('{{image.path}}'); {% endfor %}
        {% for cat in p.category %}  catProd .push('{{cat.name}}');   {% endfor %}
        {% for prov in p.provider %} provProd.push('{{prov.name}}'); {% endfor %}
        {% for pack in p.package %}  packProd.push('{{pack.name}}'); {% endfor %}
        detailProduct = {
            id            : {{p.id}},
            name          :'{{p.name}}',
            description   :'{{p.description}}',
            sizeInch      : {{p.sizeInch}},
            sizeCm        : {{p.sizeCm}},
            color         :'{{p.color}}',
            composition   :'{{p.composition}}',
            form          :'{{p.form}}',
            weight        : {{p.weight}},
            unitPrice     : {{p.unitPrice}},
            wholesalePrice: {{p.wholesalePrice}},
            specialPrice  : {{p.specialPrice}},
            internetPrice : {{p.internetPrice}},
            images        : imgProd,
            category      : catProd,
            provider      : provProd,
            package       : packProd,
        }
        products.push(detailProduct);
    {% endfor %}
    Product.init(products);

</script>
{% endblock %}