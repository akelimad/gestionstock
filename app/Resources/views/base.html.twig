<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" >
    <meta http-equiv="X-UA-Compatible" content="IE=edge" >
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" >

    <title>{% block title %} |Digital Work {% endblock %}</title>
    
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' name='viewport' >
    <meta name="viewport" content="width=device-width" >
    
    <!--  Material Dashboard CSS    -->
    
    {% block stylesheets %}
        <script src="{{ asset('assets/vendors/jquery-3.1.1.min.js') }}"></script>
        <script src="{{ asset('assets/vendors/underscore-min.js') }}"></script>
        
        <link href="{{ asset('assets/css/bootstrap.min.css')}}" rel='stylesheet' type='text/css' media="all">
        <link href="{{ asset('assets/css/amaze.css') }}" rel="stylesheet" />
        <!--     Fonts and icons     -->
        <link href="{{ asset('assets/css/font-awesome.min.css')}}" rel='stylesheet' type='text/css'>
        <link href="{{ asset('assets/css/font-muli.css')}}" rel='stylesheet' type='text/css'>
        <link href="{{ asset('assets/css/themify-icons.css')}}" rel="stylesheet" type='text/css'>
        <link href="{{ asset('assets/vendors/dropzone/dropzone.min.css')}}" rel="stylesheet">
        <link href="{{ asset('assets/vendors/sweetalert/css/sweetalert2.min.css')}}" rel="Stylesheet" >
        <link href="{{ asset('assets/vendors/jquery-ui-1.12.0/jquery-ui.css')}}" rel="Stylesheet" >
        <!-- product images switcher fotorama -->
        <link href="{{ asset('assets/vendors/fotorama/fotorama.css')}}" rel="Stylesheet" >
        <link href="{{ asset('assets/css/style.css')}}" rel="Stylesheet" media="all" >
        <link href="{{ asset('assets/css/print.css')}}" rel="Stylesheet" media="print" >
        
    {% endblock %}
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-background-color="brown" data-active-color="danger">
        <!--
            Tip 1: you can change the color of the sidebar's background using: data-background-color="white | brown"
            Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
        -->
            <div class="logo">
                <a href="{{ path('app_default_index') }}" class="simple-text">
                    <img src="{{ asset('assets/img/logo_mp.png') }}" class="img-responsive" alt="">
                </a>
            </div>
            <div class="logo logo-mini">
                <a href="{{ path('app_default_index') }}" class="simple-text">
                    MP
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="{{ app.request.attributes.get('_route') == 'product_index' ? 'active' : '' }}">
                        <a data-toggle="collapse" href="#products" class="collapsed" aria-expanded="false">
                            <i class="fa fa-product-hunt"></i>
                            <p>Produits
                                <b class="caret"></b>
                            </p>
                        </a>
                        <div class="collapse" id="products" role="navigation" aria-expanded="false" style="height: 0px;">
                            <ul class="nav">
                                <li>
                                    <a href="{{path('product_index')}}"><i class="fa fa-list"></i> Liste des produits</a>
                                </li>
                                <li>
                                    <a href="{{path('product_desactiveted')}}"><i class="fa fa-trash"></i> Les produits supprimés</a>
                                </li>
                                <li>
                                    <a href="{{path('product_new')}}"><i class="fa fa-plus"></i> Nouveau </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'category_index' ? 'active' : '' }}">
                        <a data-toggle="collapse" href="#categories" class="collapsed" aria-expanded="false">
                            <i class="fa fa-tag"></i>
                            <p>Categories
                                <b class="caret"></b>
                            </p>
                        </a>
                        <div class="collapse" id="categories" role="navigation" aria-expanded="false" style="height: 0px;">
                            <ul class="nav">
                                <li>
                                    <a href="{{path('category_index')}}"><i class="fa fa-plus"></i> Categorie</a>
                                </li>
                                <li>
                                    <a href="{{ path('sub_category_index') }}"><i class="fa fa-plus"></i> Sous categorie</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'package_index' ? 'active' : '' }}">
                        <a href=" {{path('package_index')}} ">
                            <i class="ti-package"></i>
                            <p>Emballages</p>
                        </a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'provider_index' ? 'active' : '' }}">
                        <a href=" {{path('provider_index')}} ">
                            <i class="fa fa-cubes"></i>
                            <p>Fournisseurs</p>
                        </a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="{{ app.request.attributes.get('_route') == 'user_default_index' ? 'active' : '' }}">
                        <a href=" {{path('user_default_index')}} ">
                            <i class="fa fa-users"></i>
                            <p>Utilisateurs</p>
                        </a>
                    </li>
                    {% endif %}
                    <li class="{{ app.request.attributes.get('_route') == 'color_index' ? 'active' : '' }}" style="display: none;">
                        <a href="{{path('color_index')}}">
                            <i class="fa fa-google-wallet"></i>
                            <p>Couleurs</p>
                        </a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'product_import' ? 'active' : '' }}" style="display: none;">
                        <a href="{{path('product_import')}}">
                            <i class="fa fa-download"></i>
                            <p>Importer</p>
                        </a>
                    </li>
                </ul>
                <div class="copyright-section">
                    <p class="copyright">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>
                        <a href="#">Digital Works.</a>
                        <span>Version : 1.1</span>
                    </p>
                </div>
            </div>
        </div> <!-- endside bar -->
        <div class="main-panel">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-minimize">
                        <button id="minimizeSidebar" class="btn btn-round btn-white btn-fill btn-just-icon">
                            <i class="ti-arrow-left"></i>
                        </button>
                    </div>
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('app_default_index') }}"> Accueil </a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#pablo" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="ti-user"></i>
                                    <p class="hidden-lg hidden-md">Profile</p>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="#"><i class="fa fa-user fw"></i>  
                                            {% if app.user %}
                                                {{app.user.username}} : 
                                                {% for role in app.user.roles|slice(0,1) %}
                                                    {{ role =="ROLE_SUPER_ADMIN" ? " Admin" }}
                                                    {{ role =="ROLE_ADMIN" ? " Admin" }}
                                                    {{ role =="ROLE_USER" ? " Utilisateur" }}
                                                {% endfor %}
                                            {% else %}
                                                Anonymous
                                            {% endif %}
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{path('fos_user_change_password')}}"><i class="fa fa-edit fw"></i>  Changer mot de passe</a>
                                    </li>
                                    <li>
                                        <a href="{{path('fos_user_security_logout')}}"><i class="fa fa-sign-out fw"></i>  Déconnexion</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="separator hidden-lg hidden-md"></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                {% block body %}{% endblock %}
            </div>
            <footer class="footer" style="display: none">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="#">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Company
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>
                        <a href="#">Digital Works.</a>
                    </p>
                </div>
            </footer>
        </div>

    </div>
<!--   Core JS Files   -->
{% block javascripts %}
    <script src="{{ asset('assets/js/bootstrap.min.js') }}" ></script>
    <script src="{{ asset('assets/vendors/jquery-ui.min.js') }}" ></script>
    <script src="{{ asset('assets/vendors/jquery-ui-1.12.0/jquery-ui.js') }}" ></script>
    <script src="{{ asset('assets/vendors/material.min.js') }}"></script>
    <script src="{{ asset('assets/vendors/perfect-scrollbar.jquery.min.js') }}"></script>

    <!-- Select Plugin -->
    <script src="{{ asset('assets/vendors/jquery.select-bootstrap.js') }}"></script>

    <!--  DataTables.net Plugin    -->
    <script src="{{ asset('assets/vendors/jquery.datatables.js') }}"></script>
    <!-- Sweet Alert 2 plugin -->
    <script src="{{ asset('assets/vendors/sweetalert/js/sweetalert2.min.js') }}"></script>
    <!--    Plugin for Fileupload, full documentation here: http://www.jasny.net/bootstrap/javascript/#fileinput -->
    <script src="{{ asset('assets/vendors/jasny-bootstrap.min.js') }}"></script>

    <!-- Material Dashboard javascript methods -->
    <script src="{{ asset('assets/js/amaze.js') }}"></script>

    <script src="{{ asset('assets/vendors/dropzone/dropzone.min.js') }}"></script>

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <!-- product images switcher smoothproduct -->
    <script src="{{ asset('assets/vendors/fotorama/fotorama.js') }}"></script>

    <script src="{{ asset('assets/js/custom.js') }}"></script>
    
{% endblock %}
</body>
</html>
