

{% extends 'base.html.twig' %}
{% block title %}Changement de passe{% endblock %}
{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="card">
                        {{ form_start(form) }}
                            <div class="content">
                                <h4 class="title text-center">{{'change_password.title'|trans}} </h4>
                                <div class="form-group {{ form_errors(form.current_password) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="app_user_change_password_current_password">{{'form.current_password'|trans({}, 'FOSUserBundle')}}</label>
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(form.current_password) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(form.plainPassword.first) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="app_user_change_password_plainPassword_first">{{'form.new_password'|trans({}, 'FOSUserBundle')}}</label>
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(form.plainPassword.first) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(form.plainPassword.second) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="app_user_change_password_plainPassword_second">{{'form.new_password_confirmation'|trans({}, 'FOSUserBundle')}}</label>
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(form.plainPassword.second) }}</span> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <button type="submit" class="btn btn-info btn-fill"><i class="fa fa-edit"></i> {{'btn.edit'|trans}}</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

