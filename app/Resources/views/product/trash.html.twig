{% extends 'base.html.twig' %} 
{% block title %}Produit{% endblock %}
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        <h4 class="title">La liste des produits supprimés</h4>
                        <div class="toolbar">
                            
                        </div>
                        <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                            <thead>
                                <tr>
                                    <th>ID Produit</th>
                                    <th>Photo</th>
                                    <th style="width: 98px">Article</th>
                                    <th style="width: 109px">Prix internet</th>
                                    <th>Categorie</th>
                                    <th style="width: 107px">Sous categorie</th>
                                    <th style="width: 58px">Statut</th>
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody id ="product-results"> 
                                {% for p in products %}
                                <tr>
                                    <td>{{p.codeBar}}</td>
                                    <td>
                                    {% for image in p.images|slice(0, 1) %}
                                    <img src="{{ asset('uploads/images/' ~ image.path) }}" class="img-circle" alt="img prod" width="50">
                                    {% endfor %}
                                    </td>
                                    <td>{{p.name}}</td>
                                    <td>{{p.internetPrice ? p.internetPrice : ""}} </td>
                                    <td>
                                    {% for cat in p.categories %}
                                        {{ cat.parent == null ? cat.name : '' }}
                                    {% endfor %}
                                    </td>  
                                    <td>
                                    {% for cat in p.categories %}
                                        {{ cat.parent != null ? cat.name : '' }}
                                    {% endfor %}
                                    </td>
                                    <td>{{p.active == 1 ? 'Active' : 'Desactivé' }}</td>
                                    <td class="text-right">

                                        <a href="{{ path('product_revert', { 'id': p.id }) }}" class="btn btn-simple btn-warning btn-icon btn-fill revert-product" title="Récuperer"><i class="ti-back-right"></i></a>

                                        <button data-id="{{ p.id }}" title="Supprimer définitivement" class="btn btn-simple btn-danger btn-icon btn-fill remove-product">
                                        <i class="ti-trash"></i></button>

                                        <span id="csrf_token" data-token="{{ csrf_token('form') }}"></span>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            
                        </table>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>
<script src="{{ asset('assets/js/product.js') }}"></script>

{% endblock %}