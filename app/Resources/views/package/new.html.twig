{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="card">
                        {{ form_start(form) }}
                            <div class="content">
                                <h4 class="title text-center">Create package</h4>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(form.name, "Name", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.name) }} 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(form.size, "Size", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(form.size, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.size) }} 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(form.cbm, "CMB", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(form.cbm, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.cbm) }} 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(form.marineCost, "Marine cost", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(form.marineCost, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.marineCost) }} 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(form.airCost, "Air cost", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(form.airCost, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.airCost) }} 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(form.active, "Active", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            <label class="checkbox">
                                                <span class="icons">
                                                <span class="first-icon fa fa-square"></span>
                                                <span class="second-icon fa fa-check-square "></span>
                                                {{ form_widget(form.active, {'attr': {'class': ''}}) }}
                                            </label>
                                            {{ form_errors(form.active) }} 
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <button type="submit" class="btn btn-info btn-fill"><i class="fa fa-plus"></i> Add pachage</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
