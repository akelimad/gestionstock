{% extends 'base.html.twig' %}
{% block title %}Categorie{% endblock %} 
{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{path('app_default_index')}}">{{'breadcrumb.home'|trans}}</a></li>
                        {% if is_sub_cat == false %}
                            <li class="breadcrumb-item"><a href="{{path('category_index')}}">{{'category.breadcrumb.categories'|trans}}</a></li>
                        {% else %}
                            <li class="breadcrumb-item"><a href="{{path('sub_category_index')}}">{{'s_category.breadcrumb.s_categories'|trans}}</a></li>
                        {% endif %}

                        <li class="breadcrumb-item active">{{category.name}}</li>
                    </ol>
                    <div class="card">
                        {{ form_start(edit_form) }}
                            <div class="content">
                                <h4 class="title text-center">{{'category.action.edit.title'|trans}}</h4>
                                <div class="form-group {{ form_errors(edit_form.name) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.name, 'category.label.name', {'label_attr': {'class': 'control-label'}})|trans | raw }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.name) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.code) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.code, "Code", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.code, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.code) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.description) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.description, "Description", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
                                            <span class="help-block">{{ form_errors(edit_form.description) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.parent) ? 'has-error': '' }}" {% if is_sub_cat == false %}style="display: none;" {% endif %}>
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.parent, 'category.label.parent', {'label_attr': {'class': 'control-label'}})|trans | raw  }}
                                        </div>
                                        <div class="col-md-8">
                                            {% if is_sub_cat == false %}
                                                {{ form_widget(edit_form.parent, {'attr': {'class': 'form-control'}}) }}
                                            {% else %}
                                                {{ form_widget(edit_form.parent, {'attr': {'class': 'form-control', 'required':'required'}}) }}
                                            {% endif %}
                                            <span class="help-block">{{ form_errors(edit_form.parent) }}</span> 
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group {{ form_errors(edit_form.active) ? 'has-error': '' }}">
                                    <div class="row">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.active, "Active", {'label_attr': {'class': 'control-label'}}) }}
                                        </div>
                                        <div class="col-md-8">
                                            <label class="checkbox">
                                                <span class="icons">
                                                <span class="first-icon fa fa-square"></span>
                                                <span class="second-icon fa fa-check-square"></span>
                                                {{ form_widget(edit_form.active, {'attr': {'class': ''}}) }}
                                            </label>
                                            <span class="help-block">{{ form_errors(edit_form.active) }}</span> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <button type="submit" class="btn btn-info btn-fill"><i class="fa fa-edit"></i> {{'btn.edit'|trans}}</button>
                            </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
