{% extends 'base.html.twig' %}
{% block title %}Ajouter utilisateur{% endblock %}
{% block body %}

<section class="edit">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{path('app_default_locale')}}">{{'breadcrumb.home'|trans}}</a></li>
                <li class="breadcrumb-item"><a href="{{path('user_default_index')}}">{{'user.breadcrumb.users'|trans}}</a></li>
                <li class="breadcrumb-item active">{{user.nom}}</li>
            </ol>
            <div class="card">
                <div class="panel-heading"><h3 class="text-center">{{'user.action.edit.title'|trans}}</h3></div>
                <div class="panel-body">
                {{ form_start(form) }}
                <div class="form-group {{ form_errors(form.username) ? 'has-error': '' }}">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="registration_username">{{'form.login'|trans({}, 'FOSUserBundle')}}</label>
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.username) }}</span> 
                        </div>
                    </div>
                </div>
                <div class="form-group {{ form_errors(form.nom) ? 'has-error': '' }}">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="registration_nom">{{'form.username'|trans({}, 'FOSUserBundle')}}</label>
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.nom) }}</span> 
                        </div>
                    </div>
                </div>
                <div class="form-group {{ form_errors(form.email) ? 'has-error': '' }}">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="registration_email">{{'form.email'|trans({}, 'FOSUserBundle')}}</label>
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.email) }}</span> 
                        </div>
                    </div>
                </div>
                <div class="form-group {{ form_errors(form.roles) ? 'has-error': '' }}">
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_label(form.roles, 'user.label.roles', {'label_attr': {'class': 'control-label'}})|trans | raw }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.roles) }}</span> 
                        </div>
                    </div>
                </div>
                <div class="form-group {{ form_errors(form.enabled) ? 'has-error': '' }}">
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_label(form.enabled, "Active ", {'label_attr': {'class': 'control-label'}}) }}
                        </div>
                        <div class="col-md-8">
                            <label class="checkbox">
                                <span class="icons">
                                <span class="first-icon fa fa-square"></span>
                                <span class="second-icon fa fa-check-square"></span>
                                {{ form_widget(form.enabled, {'attr': {'class': ''}}) }}
                            </label>
                            <span class="help-block">{{ form_errors(form.enabled) }}</span> 
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8 col-md-offset-4" style="margin-top:10px;">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-btn fa-edit"></i> {{'btn.edit'|trans}}
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
              </div>
            </div>
        </div>
      </div>
    </div>
</section>
{% endblock %}