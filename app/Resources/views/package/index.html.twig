{% extends 'base.html.twig' %}
{% block title %}Emballage{% endblock %} 
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{path('app_default_index')}}">{{'breadcrumb.home'|trans}}</a></li>
                    <li class="breadcrumb-item"><a href="{{path('package_index')}}">{{'package.breadcrumb.packages'|trans}}</a></li>
                </ol>
                <div class="card">
                    <div class="content packages">
                        <h4 class="title">{{'package.index.title'|trans}}
                        {% if is_granted('ROLE_USER') %}
                            <a href=" {{path('package_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> {{'btn.new'|trans}} </a>
                        {% endif %}
                        </h4>
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>{{'package.label.name'|trans}}</th>
                                        <th>{{'package.label.size'|trans}}</th>
                                        <th>{{'package.label.cbm'|trans}}</th>
                                        <th>{{'package.label.marineCost'|trans}}</th>
                                        <th>{{'package.label.airCost'|trans}}</th>
                                        <th>{{'label.status'|trans}}</th>
                                        <th class="disabled-sorting text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for p in packages %}
                                    <tr>
                                        <td>{{p.id}}</td>
                                        <td>{{p.name}}</td>
                                        <td>{{p.size ? p.size : '---' }}</td>
                                        <td>{{p.cbm ? p.cbm : '---' }}</td>
                                        <td>{{p.marineCost ? p.marineCost : '---' }}</td>
                                        <td>{{p.airCost ? p.airCost : '---' }}</td>
                                        <td>{{p.active == 1 ? 'Actif' : 'Inactif'}}</td>
                                        <td class="text-right">
                                            <a href="{{ path('package_edit', { 'id': p.id }) }}" title="Modifier" class="btn btn-simple btn-warning btn-icon btn-fill edit " ><i class="ti-pencil-alt"></i></a>

                                            <button data-id="{{ p.id }}" title="{{ p.active == 0 ? 'Supprimer' : 'Vueillez dÃ©sactiver pour pouvoir supprimer' }}" class="btn btn-simple btn-danger btn-icon btn-fill remove-package {{p.active == 1 ? 'prevent-remove' : ''}}" {{p.active == 1 ? 'disabled' : ''}}><i class="ti-close"></i></button>
                                            <span id="csrf_token" data-token="{{ csrf_token('form') }}"></span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>{{'package.label.name'|trans}}</th>
                                        <th>{{'package.label.size'|trans}}</th>
                                        <th>{{'package.label.cbm'|trans}}</th>
                                        <th>{{'package.label.marineCost'|trans}}</th>
                                        <th>{{'package.label.airCost'|trans}}</th>
                                        <th>{{'label.status'|trans}}</th>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>

{% endblock %}