{% extends 'base.html.twig' %}
{% block title %}Produit{% endblock %}
{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="card">
                        {{ form_start(form, {'attr': {'class':'test', 'id':'test'}}) }}
                            <div class="content">
                                <h4 class="title text-center">Ajouter un produit </h4>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.name) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.name, "Article", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.name) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group {{ form_errors(form.description) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.description, "Description", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.description) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.sizeInch) ? 'has-error': '' }}">
