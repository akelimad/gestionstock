                                            <div class="col-md-8">
                                                {{ form_widget(form.form, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.form) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group {{ form_errors(form.weight) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.weight, "Poids", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.weight, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.weight) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.unitPrice) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.unitPrice, "Prix unitaire", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.unitPrice, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.unitPrice) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group {{ form_errors(form.wholesalePrice) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.wholesalePrice, "Prix grossiste", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.wholesalePrice, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.wholesalePrice) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.collection) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.collection, "Collection", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.collection, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.collection) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.specialPrice) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.specialPrice, "Prix spécial", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.specialPrice, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.specialPrice) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group {{ form_errors(form.internetPrice) ? 'has-error': '' }}">
