{% extends 'base.html.twig' %} 

{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        <h4 class="title">La liste des produits <a href=" {{path('product_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Nouveau</a></h4>
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables product-table">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Photo</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Prix unitaire</th>
                                        <th>Category</th>
                                        <th>Parent category</th>
                                        <th>Status</th>
                                        <th class="disabled-sorting text-right">Actions</th>
                                    </tr>
                                </thead>
                                {% for p in products %}
                                <tbody>
                                    <tr>
                                        <td>{{p.id}}</td>
                                        <td>
                                        {% for image in p.images|slice(0, 1) %}
                                        <img src="{{ asset('uploads/images/' ~ image.path) }}" alt="" width="50">
                                        {% endfor %}
                                        </td>
                                        <td>{{p.name}}</td>
                                        <td>{{p.description}}</td>
                                        <td>{{p.unitPrice}}</td>
                                        <td>
                                        {% for cat in p.category %}
                                            {{cat.name}}
                                        </td>
                                        <td>
                                            {{cat.parent is null ? 'No parent' : cat.parent}}
                                        {% endfor %}
                                        </td>
                                        <td>{{p.active == 1 ? 'Active' : 'Not active'}}</td>
                                        <td class="text-right">
                                            <a data-id="{{ p.id }}" class="btn btn-simple btn-default btn-icon btn-fill edit showProduct" data-toggle="modal" data-target="#show-productxx"><i class="ti-eye"></i></a>

                                            <a href="{{ path('product_edit', { 'id': p.id }) }}" class="btn btn-simple btn-warning btn-icon btn-fill edit"><i class="ti-pencil-alt"></i></a>

                                            <button data-id="{{ p.id }}"  class="btn btn-simple btn-danger btn-icon btn-fill remove-product"><i class="ti-close"></i></button>
                                            <span id="csrf_token" data-token="{{ csrf_token('form') }}"></span>
                                        </td>
                                    </tr>
                                </tbody>
                                {% endfor %}
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Photo</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Prix unitaire</th>
                                        <th>Category</th>
                                        <th>Sub category</th>
                                        <th>Status</th>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

    <!-- Modal -->
    <div id="productModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">Product details</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="name"></div>
                            <div class="category"></div>
                            <div class="sp-loading">
                                <img src="{{ asset('assets/img/loading.gif') }}" alt="">
                                <br><br> Looding ...
                            </div>
                            <div class="sp-wrap fotorama">
                                
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-4 description">   
                                </div>
                                <div class="col-md-4 size-inch">  
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 size-cm">   
                                </div>
                                <div class="col-md-4 color"> 
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 composition">  
                                </div>
                                <div class="col-md-4 form">  
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 weight"> 
                                </div>
                                <div class="col-md-4 unit-price"> 
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 wholesale-price"> 
                                </div>
                                <div class="col-md-4 special-price"> 
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 internet-price"> 
                                </div>
                                <div class="col-md-4 package"> 
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 provider"> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
        </div>
    </div><!-- /.modal -->

                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>
<script src="{{ asset('assets/js/product.js') }}"></script>
<script>
    var products = [];
    var detailProduct = {};

    {% for p in products %}
        var imgProd=[];
        var catProd=[];
        var provProd=[];
        var packProd=[];

        {% for image in p.images %}  imgProd .push('{{image.path}}'); {% endfor %}
        {% for cat in p.category %}  catProd .push('{{cat.name}}');   {% endfor %}
        {% for prov in p.provider %} provProd.push('{{prov.name}}'); {% endfor %}
        {% for pack in p.package %}  packProd.push('{{pack.name}}'); {% endfor %}
        detailProduct = {
            id            : {{p.id}},
            name          :'{{p.name}}',
            description   :'{{p.description}}',
            sizeInch      : {{p.sizeInch}},
            sizeCm        : {{p.sizeCm}},
            color         :'{{p.color}}',
            composition   :'{{p.composition}}',
            form          :'{{p.form}}',
            weight        : {{p.weight}},
            unitPrice     : {{p.unitPrice}},
            wholesalePrice: {{p.wholesalePrice}},
            specialPrice  : {{p.specialPrice}},
            internetPrice : {{p.internetPrice}},
            images        : imgProd,
            category      : catProd,
            provider      : provProd,
            package       : packProd,
        }
        products.push(detailProduct);
    {% endfor %}
    Product.init(products);


    
    
</script>
{% endblock %}