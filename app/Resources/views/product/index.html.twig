{% extends 'base.html.twig' %} 
{% block title %}Poduit{% endblock %}
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        <h4 class="title">La liste des produits <a href=" {{path('product_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Nouveau</a></h4>
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables product-table">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Photo</th>
                                        <th>Name</th>
                                        <th>Prix unitaire</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th class="disabled-sorting text-right">Actions</th>
                                    </tr>
                                </thead>
                                {% for p in products %}
                                <tbody>
                                    <tr>
                                        <td>{{p.id}}</td>
                                        <td>
                                        {% for image in p.images|slice(0, 1) %}
                                        <img src="{{ asset('uploads/images/' ~ image.path) }}" alt="" width="50">
                                        {% endfor %}
                                        </td>
                                        <td>{{p.name}}</td>
                                        <td>{{p.unitPrice}}</td>
                                        <td>
                                        {% for cat in p.category %}
                                            {{cat.name}}
                                        {% endfor %}
                                        </td>
                                        <td>{{p.active == 1 ? 'Active' : 'Not active'}}</td>
                                        <td class="text-right">
                                            <a data-id="{{ p.id }}" class="btn btn-simple btn-default btn-icon btn-fill edit showProduct" data-toggle="modal" data-target="#show-productxx"><i class="ti-eye"></i></a>

                                            <a href="{{ path('product_edit', { 'id': p.id }) }}" class="btn btn-simple btn-warning btn-icon btn-fill edit"><i class="ti-pencil-alt"></i></a>

                                            <button data-id="{{ p.id }}"  class="btn btn-simple btn-danger btn-icon btn-fill remove-product"><i class="ti-close"></i></button>
                                            <span id="csrf_token" data-token="{{ csrf_token('form') }}"></span>
                                        </td>
                                    </tr>
                                </tbody>
                                {% endfor %}
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Photo</th>
                                        <th>Name</th>
                                        <th>Prix unitaire</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        {% include "product/details.html.twig" %}
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>
<script src="{{ asset('assets/js/product.js') }}"></script>
<script>


    var products = [];
    var detailProduct = {};

    {% for p in products %}
        var imgProd=[];
        var catProd=[];
        var provProd=[];
        var packProd=[];

        {% for image in p.images %}  imgProd .push('{{image.path}}'); {% endfor %}
        {% for cat in p.category %}  catProd .push('{{cat.name}}');   {% endfor %}
        {% for prov in p.provider %} provProd.push('{{prov.name}}'); {% endfor %}
        {% for pack in p.package %}  packProd.push('{{pack.name}}'); {% endfor %}
        detailProduct = {
            id            : {{p.id}},
            name          :'{{p.name}}',
            description   :'{{p.description}}',
            sizeInch      : {{p.sizeInch}},
            sizeCm        : {{p.sizeCm}},
            color         :'{{p.color}}',
            composition   :'{{p.composition}}',
            form          :'{{p.form}}',
            weight        : {{p.weight}},
            unitPrice     : {{p.unitPrice}},
            wholesalePrice: {{p.wholesalePrice}},
            specialPrice  : {{p.specialPrice}},
            internetPrice : {{p.internetPrice}},
            images        : imgProd,
            category      : catProd,
            provider      : provProd,
            package       : packProd,
        }
        products.push(detailProduct);
    {% endfor %}
    Product.init(products);

</script>
{% endblock %}