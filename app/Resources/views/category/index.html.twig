{% extends 'base.html.twig' %}

{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        
                        <h4 class="title">La liste des categories <a href=" {{path('category_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Nouveau</a> </h4>
                        <div class="toolbar">
                           
                        </div>
                        <div class="material-datatables">
                            
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Parent category</th>
                                        <th>Status</th>
                                        <th class="disabled-sorting text-right">Actions</th>
                                    </tr>
                                </thead>
                                {% for c in categories %}
                                <tbody>
                                    <tr>
                                        <td>{{c.id}}</td>
                                        <td>{{c.name}}</td>
                                        <td>{{c.description}}</td>
                                        <td>{{c.parent is null ? 'No parent' : c.parent }}</td>
                                        <td>{{c.active == 1 ? 'Active' : 'Not active'}}</td>
                                        <td class="text-right">
                                            <form name="form" method="post" action="/gestionstock/web/app_dev.php/category/{{c.id}}">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <a href="{{ path('category_edit', { 'id': c.id }) }}" class="btn btn-simple btn-warning btn-icon edit"><i class="ti-pencil-alt"></i></a>
                                                <button type="submit" value="Delete" class="btn btn-simple btn-danger btn-icon remove"><i class="ti-close"></i></button>
                                                <input type="hidden" id="form__token" name="form[_token]" value="aZOi-arz2h_X_xUEIv7nW1uDgLluqQnvGFa55doVnn8">
                                            </form>
                                        </td>
                                    </tr>
                                </tbody>
                                {% endfor %}
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Parent category</th>
                                        <th>Status</th>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>

{% endblock %}