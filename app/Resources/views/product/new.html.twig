                                            <div class="col-md-4">
                                                {{ form_label(form.sizeInch, "Taille (inch)", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.sizeInch, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.sizeInch) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group {{ form_errors(form.sizeCm) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.sizeCm, "Taille (cm)", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.sizeCm, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.sizeCm) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.color) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.color, "Couleur", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.color, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.color) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group {{ form_errors(form.composition) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.composition, "Composition", {'label_attr': {'class': 'control-label'}}) }}
                                            </div>
                                            <div class="col-md-8">
                                                {{ form_widget(form.composition, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.composition) }}</span> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 form-group {{ form_errors(form.form) ? 'has-error': '' }}">
                                        <div class="row">
                                            <div class="col-md-4">
                                                {{ form_label(form.form, "Forme", {'label_attr': {'class': 'control-label'}}) }}
