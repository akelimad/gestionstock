{% extends 'base.html.twig' %} 
{% block title %}Produit{% endblock %}
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content">
                        <h4 class="title">La liste des produits 
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href=" {{path('product_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Nouveau</a>
                        {% endif %}
                        </h4>
                        <div class="toolbar">
                            
                        </div>
                        
                        <div class="material-datatables product-table">
                            <div class="row">
                                <div class="col-md-4 filter">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <select name="filter-by-cat" id="filter-by-cat" class="form-control">
                                                <option value="0">Filtrez par cat√©gorie</option>
                                                {% for cat in categories %}
                                                <option value="{{cat.id}}">{{ cat.name }}</option>
                                                {% endfor %} 
                                            </select>
                                        </div>
                                        <div class="col-md-2" id="loading-cat">
                                            <img src="{{ asset('assets/img/loading.gif') }}" class="img-responsive" alt="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <select name="filter-by-prov" id="filter-by-sub-cat" class="form-control">
                                                <option value="0">Filtrez par sous categorie</option>
                                                {% for sub in sub_categories %}
                                                <option value="{{sub.id}}">{{ sub.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-2" id="loading-sub-cat">
                                            <img src="{{ asset('assets/img/loading.gif') }}" class="img-responsive" alt="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <select name="filter-by-prov" id="filter-by-prov" class="form-control">
                                                <option value="0">Filtrez par fournisseur</option>
                                                {% for prov in providers %}
                                                <option value="{{prov.id}}">{{ prov.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-2" id="loading-prov">
                                            <img src="{{ asset('assets/img/loading.gif') }}" class="img-responsive" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% include 'product/results.html.twig' %}
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>
<script src="{{ asset('assets/js/product.js') }}"></script>

{% endblock %}