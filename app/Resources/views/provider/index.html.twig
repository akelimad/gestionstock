{% extends 'base.html.twig' %} 
{% block title %}Fournisseur{% endblock %}
{% block body %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="content providers">
                        <h4 class="title">La liste des fournisseurs 
                        {% if is_granted('ROLE_USER') %}
                            <a href=" {{path('provider_new')}} " class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Nouveau</a>
                        {% endif %}
                        </h4>
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Nom</th>
                                        <th>Societé</th>
                                        <th>Activité</th>
                                        <th>Adresse</th>
                                        <th>Tel</th>
                                        <th>E-mail</th>
                                        <th>Ring</th>
                                        <th>Statut</th>
                                        <th class="disabled-sorting text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for p in providers %}
                                    <tr>
                                        <td>{{p.id}}</td>
                                        <td>{{p.name}}</td>
                                        <td>{{p.society ? p.society : '---'}}</td>
                                        <td>{{p.activity ? p.activity : '---' }}</td>
                                        <td>{{p.address ? p.address : '---' }}</td>
                                        <td>{{p.tel ? p.tel : '---'}}</td>
                                        <td>{{p.email ? p.email : '---'}}</td>
                                        <td>{% if p.ring %} {{p.ring}} % {% else %} --- {% endif %}</td>
                                        <td>{{p.active == 1 ? 'Actif' : 'Inactif'}}</td>
                                        <td class="text-right">
                                            <a href="{{ path('provider_edit', { 'id': p.id }) }}" title="Modifier" class="btn btn-simple btn-warning btn-icon btn-fill edit"><i class="ti-pencil-alt"></i></a>

                                            <button data-id="{{ p.id }}" title="{{ p.active == 0 ? 'Supprimer' : 'Vueillez désactiver pour pouvoir supprimer' }}" class="btn btn-simple btn-danger btn-icon btn-fill remove-provider {{p.active == 1 ? 'prevent-remove' : ''}}" {{p.active == 1 ? 'disabled' : ''}}><i class="ti-close"></i></button>
                                            <span id="csrf_token" data-token="{{ csrf_token('form') }}"></span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Nom</th>
                                        <th>Societé</th>
                                        <th>Activité</th>
                                        <th>Adresse</th>
                                        <th>Tel</th>
                                        <th>E-mail</th>
                                        <th>Ring</th>
                                        <th>Statut</th>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>

{% endblock %}