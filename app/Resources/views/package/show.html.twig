{% extends 'base.html.twig' %}
{% block title %}Emballage{% endblock %}
{% block body %}
    <h1>Package</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ package.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ package.name }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ package.size }}</td>
            </tr>
            <tr>
                <th>Cbm</th>
                <td>{{ package.cbm }}</td>
            </tr>
            <tr>
                <th>Marinecost</th>
                <td>{{ package.marineCost }}</td>
            </tr>
            <tr>
                <th>Aircost</th>
                <td>{{ package.airCost }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if package.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('package_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('package_edit', { 'id': package.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
