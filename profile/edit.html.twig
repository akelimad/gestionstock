{% extends 'base.html.twig' %}
{% block title %}Ajouter utilisateur{% endblock %}
{% block body %}

<section class="edit">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
              <div class="panel-heading"><h3 class="text-center">Modifier le compte utilisateur</h3></div>
              <div class="panel-body">
                {{ form_start(form) }}
                <div class="form-group {{ form_errors(form.username) ? 'has-error': '' }}">
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'control-label'}}) }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.username) }}</span> 
                        </div>
                    </div>
                </div>
                <div class="form-group {{ form_errors(form.email) ? 'has-error': '' }}">
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_label(form.email, "Adresse email ", {'label_attr': {'class': 'control-label'}}) }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.email) }}</span> 
                        </div>
                    </div>
                </div>
                <div class="form-group {{ form_errors(form.roles) ? 'has-error': '' }}">
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_label(form.roles, "Role ", {'label_attr': {'class': 'control-label'}}) }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.roles) }}</span> 
                        </div>
                    </div>
                </div>
                <div class="form-group {{ form_errors(form.enabled) ? 'has-error': '' }}">
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_label(form.enabled, "Active ", {'label_attr': {'class': 'control-label'}}) }}
                        </div>
                        <div class="col-md-8">
                            <label class="checkbox">
                                <span class="icons">
                                <span class="first-icon fa fa-square"></span>
                                <span class="second-icon fa fa-check-square"></span>
                                {{ form_widget(form.enabled, {'attr': {'class': ''}}) }}
                            </label>
                            <span class="help-block">{{ form_errors(form.enabled) }}</span> 
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8 col-md-offset-4" style="margin-top:10px;">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-btn fa-edit"></i> Mettre Ã  jour
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
              </div>
            </div>
        </div>
      </div>
    </div>
</section>
{% endblock %}