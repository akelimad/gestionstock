<table id="datatables" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0">
    <thead>
        <tr>
            <th>ID Produit</th>
            <th>Photo</th>
            <th>Article</th>
            <th>Prix internet</th>
            <th>Categorie</th>
            <th>Sous categorie</th>
            <th>Statut</th>
            <th class="disabled-sorting text-right">Actions</th>
        </tr>
    </thead>
    <tbody id ="product-results"> 
        {% for p in products %}
        <tr>
            <td>{{p.id}}</td>
            <td>
            {% for image in p.images|slice(0, 1) %}
            <img src="{{ asset('uploads/images/' ~ image.path) }}" alt="" width="50">
            {% endfor %}
            </td>
            <td>{{p.name}}</td>
            <td>{{p.internetPrice ? p.internetPrice : ""}} </td>
            <td>
            {% for cat in p.categories %}
                {{ cat.parent == null ? cat.name : '' }}
            {% endfor %}
            </td>  
            <td>
            {% for cat in p.categories %}
                {{ cat.parent != null ? cat.name : '' }}
            {% endfor %}
            </td>
            <td>{{p.active == 1 ? 'Active' : 'Desactiv√©' }}</td>
            <td class="text-right">
                <a href="{{ path('product_show', { 'id': p.id }) }}" class="btn btn-simple btn-default btn-icon btn-fill edit showProduct"><i class="ti-eye"></i></a>

                <a href="{{ path('product_edit', { 'id': p.id }) }}" class="btn btn-simple btn-warning btn-icon btn-fill edit"><i class="ti-pencil-alt"></i></a>

                <button data-id="{{ p.id }}"  class="btn btn-simple btn-danger btn-icon btn-fill remove-product {{p.active == 1 ? 'prevent-remove' : ''}}" {{p.active == 1 ? 'disabled' : ''}}><i class="ti-close"></i></button>

                <span id="csrf_token" data-token="{{ csrf_token('form') }}"></span>
            </td>
        </tr>
        {% endfor %}
    </tbody>
    
</table>